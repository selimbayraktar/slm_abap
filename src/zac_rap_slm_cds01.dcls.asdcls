@EndUserText.label: 'Travel Access Control'
@MappingRole: true
define role ZAC_RAP_SLM_CDS01 {
    grant
        select
            on
                ZI_RAP_SLM_CDS01
                    where
                        CurrencyCode = 'EUR' 
                        and
                        ( TravelStatus ) = aspect pfcg_auth( ZRAPAUTH01,ZRAPAUT01, ACTVT = '03' )
                        or 
                        true;
}